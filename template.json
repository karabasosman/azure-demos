{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "String"
        },
        "admin_password": {
            "type": "SecureString"
        },
        "admin_username": {
            "type": "String"
        },
        "website_name": {
            "defaultValue": "oskmsdev",
            "type": "String"
        },
        "sql_server_name": {
            "defaultValue": "oskmsdev-sql",
            "type": "String"
        },
        "serverfarms_name": {
            "defaultValue": "ASP-oskmsdevrg-a7ea",
            "type": "String"
        },
        "vm_name": {
            "defaultValue": "osk-msdev-vm",
            "type": "String"
        },
        "vm_size": {
            "defaultValue": "Standard_DS4_v2",
            "type": "String"
        },
        "diag_str_name": {
            "defaultValue": "oskmsdevrgdiag",
            "type": "String"
        },
        "nic_name": {
            "defaultValue": "osk-msdev-vm303",
            "type": "String"
        },
        "ip_name": {
            "defaultValue": "osk-msdev-vm-ip",
            "type": "String"
        },
        "vnet_id": {
            "defaultValue": "osk-msdev-rg-vnet",
            "type": "String"
        },
        "nsg_name": {
            "defaultValue": "osk-msdev-vm-nsg",
            "type": "String"
        },
        "shutdown_time": {
            "type": "String"
        }
    },
    "variables": {
        "subscriptionId": "[subscription().subscriptionId]",
        "resourceGroupName": "[resourceGroup().name]",
        "vnetId": "[parameters('vnet_id')]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', 'default')]",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', parameters('nsg_name'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-09-01",
            "name": "[parameters('nsg_name')]",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "RDP",
                        "properties": {
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 300,
                            "direction": "Inbound",
                            "sourcePortRanges": [
                            ],
                            "destinationPortRanges": [
                            ],
                            "sourceAddressPrefixes": [
                            ],
                            "destinationAddressPrefixes": [
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-09-01",
            "name": "[parameters('ip_name')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "ipAddress": "51.144.241.16",
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4,
                "ipTags": [
                ]
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-04-01",
            "name": "[parameters('diag_str_name')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [
                    ],
                    "ipRules": [
                    ],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups/securityRules",
            "apiVersion": "2019-09-01",
            "name": "[concat(parameters('nsg_name'), '/RDP')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsg_name'))]"
            ],
            "properties": {
                "protocol": "TCP",
                "sourcePortRange": "*",
                "destinationPortRange": "3389",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 300,
                "direction": "Inbound",
                "sourcePortRanges": [
                ],
                "destinationPortRanges": [
                ],
                "sourceAddressPrefixes": [
                ],
                "destinationAddressPrefixes": [
                ]
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('website_name')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "tags": {
            },
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('serverfarms_name'))]"
            ],
            "properties": {
                "name": "[parameters('website_name')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "ANCM_ADDITIONAL_ERROR_PAGE_LINK",
                            "value": "https://dtnt-user-1.scm.azurewebsites.net/detectors"
                        }
                    ],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "dotnetcore"
                        }
                    ],
                    "alwaysOn": true
                },
                "serverFarmId": "[concat('/subscriptions/', variables('subscriptionId'),'/resourcegroups/', variables('resourceGroupName'), '/providers/Microsoft.Web/serverfarms/', parameters('serverfarms_name'))]",
                "hostingEnvironment": "",
                "clientAffinityEnabled": true
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('serverfarms_name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "kind": "",
            "tags": {
            },
            "dependsOn": [
            ],
            "properties": {
                "name": "[parameters('serverfarms_name')]",
                "workerSize": "5",
                "workerSizeId": "5",
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            },
            "sku": {
                "Tier": "Basic",
                "Name": "B1"
            }
        },
        {
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "tags": {},
            "name": "[parameters('sql_server_name')]",
            "properties": {
                "administratorLogin": "[parameters('admin_username')]",
                "administratorLoginPassword": "[parameters('admin_password')]",
                "version": "12.0"
            },
            "resources": [
                {
                    "apiVersion": "2017-10-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('sql_server_name'))]"
                    ],
                    "location": "[parameters('location')]",
                    "tags": {},
                    "name": "dotnet-sample",
                    "properties": {
                        "collation": "SQL_Latin1_General_CP1_CI_AS",
                        "maxSizeBytes": "34359738368",
                        "sampleName": "AdventureWorksLT",
                        "zoneRedundant": false,
                        "licenseType": "LicenseIncluded",
                        "readScale": "Disabled",
                        "readReplicaCount": "0",
                        "minCapacity": "",
                        "autoPauseDelay": ""
                    },
                    "sku": {
                        "name": "Standard",
                        "tier": "S1"
                    },
                    "type": "databases"
                },
                {
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('sql_server_name'))]"
                    ],
                    "location": "[parameters('location')]",
                    "name": "AllowAllWindowsAzureIps",
                    "properties": {
                        "endIpAddress": "0.0.0.0",
                        "startIpAddress": "0.0.0.0"
                    },
                    "type": "firewallrules"
                },
                {
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('sql_server_name'))]"
                    ],
                    "location": "[parameters('location')]",
                    "name": "allow-all",
                    "properties": {
                        "endIpAddress": "255.255.255.255",
                        "startIpAddress": "0.0.0.0"
                    },
                    "type": "firewallrules"
                }
               
                
            ],
            "type": "Microsoft.Sql/servers"
        },
        {
            "name": "[parameters('nic_name')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-07-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('nsg_name'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', parameters('ip_name'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', parameters('ip_name'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            }
        },
         {
            "name": "[parameters('vm_name')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('nic_name'))]",
                "[concat('Microsoft.Storage/storageAccounts/', parameters('diag_str_name'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vm_size')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "imageReference": {
                        "publisher": "microsoftvisualstudio",
                        "offer": "visualstudio2019latest",
                        "sku": "vs-2019-comm-latest-ws2019",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nic_name'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[parameters('vm_name')]",
                    "adminUsername": "[parameters('admin_username')]",
                    "adminPassword": "[parameters('admin_password')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', parameters('diag_str_name'), '.blob.core.windows.net/')]"
                    }
                }
            }
        }


    ]
}
